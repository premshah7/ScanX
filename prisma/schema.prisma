generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FACULTY
  STUDENT
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  student Student?
  faculty Faculty?
}

model Student {
  id                     Int     @id @default(autoincrement())
  rollNumber             String  @unique
  enrollmentNo           String  @unique
  userId                 Int     @unique
  deviceHash             String?
  isDeviceResetRequested Boolean @default(false)

  user               User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  attendances        Attendance[]
  proxyAttempts      ProxyAttempt[]
  subjects           Subject[]
  ownedProxyAttempts ProxyAttempt[] @relation("DeviceOwner")

  batchId  Int?
  batch    Batch? @relation(fields: [batchId], references: [id])
  semester Int    @default(1)
}

model Faculty {
  id     Int @id @default(autoincrement())
  userId Int @unique

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjects Subject[]
  batches  Batch[]
}

model Batch {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  students  Student[]
  sessions  Session[]
  faculties Faculty[]
}

model Subject {
  id            Int    @id @default(autoincrement())
  name          String
  facultyId     Int
  totalStudents Int    @default(60)

  faculty  Faculty   @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  sessions Session[]
  students Student[]
}

model Session {
  id        Int       @id @default(autoincrement())
  subjectId Int
  isActive  Boolean   @default(true)
  startTime DateTime  @default(now())
  endTime   DateTime?

  batches Batch[]

  subject       Subject        @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  attendances   Attendance[]
  proxyAttempts ProxyAttempt[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId Int
  sessionId Int
  timestamp DateTime @default(now())

  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  userAgent String?
  ipAddress String?
  student   Student @relation(fields: [studentId], references: [id])
}

model ProxyAttempt {
  id            Int      @id @default(autoincrement())
  studentId     Int
  sessionId     Int
  attemptedHash String
  timestamp     DateTime @default(now())
  deviceOwnerId Int?

  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  deviceOwner Student? @relation("DeviceOwner", fields: [deviceOwnerId], references: [id])
}

model SystemSettings {
  id               Int     @id @default(autoincrement())
  allowedIpPrefix  String  @default("")
  isIpCheckEnabled Boolean @default(false)
}
